---
const navLinks = [
  { label: 'Блог', href: '/blog/' },
  { label: 'Кейсы', href: '/cases/' },
  { label: 'Консультация', href: '/consultation/' },
];

const network = [
  { label: 'Лев Ом', href: 'https://lev.omlab.club', bg: 'rgba(191,255,0,0.08)', border: 'rgba(191,255,0,0.15)' },
  { label: 'SINTEZ Agency', href: 'https://sintez.agency', bg: 'rgba(230,126,34,0.1)', border: 'rgba(230,126,34,0.18)' },
  { label: 'OMLAB', href: 'https://omlab.club', bg: 'var(--surface)', border: 'var(--border)' },
];

const socials = [
  { label: 'Telegram', href: 'https://t.me/valery_om' },
  { label: 'Instagram', href: 'https://www.instagram.com/valery_om' },
];
---

<footer class="mt-auto border-t border-[var(--border)]">
  <!-- Top section -->
  <div class="max-w-6xl mx-auto px-5 py-12 grid grid-cols-1 md:grid-cols-3 gap-10">
    <!-- Brand -->
    <div>
      <a href="/" class="font-display text-xl text-[var(--accent)]">Валерия Ом</a>
      <p class="mt-3 text-sm font-body text-[var(--text)] opacity-60 leading-relaxed">
        AI-маркетинг для экспертов<br />и личных брендов
      </p>
    </div>

    <!-- Navigation -->
    <div>
      <h4 class="font-body text-xs font-semibold uppercase tracking-wider text-[var(--text)] opacity-40 mb-4">
        Навигация
      </h4>
      <ul class="flex flex-col gap-2.5">
        {navLinks.map((link) => (
          <li>
            <a
              href={link.href}
              class="text-sm font-body text-[var(--text)] opacity-70 hover:opacity-100 hover:text-[var(--accent)] transition-all duration-300"
            >
              {link.label}
            </a>
          </li>
        ))}
      </ul>
    </div>

    <!-- Network -->
    <div>
      <h4 class="font-body text-xs font-semibold uppercase tracking-wider text-[var(--text)] opacity-40 mb-4">
        Наша сеть
      </h4>
      <div class="flex flex-col gap-2.5">
        {network.map((item) => (
          <a
            href={item.href}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center self-start px-3 py-1.5 text-sm font-body rounded-md border transition-opacity duration-300 hover:opacity-80"
            style={`background: ${item.bg}; border-color: ${item.border};`}
          >
            {item.label}
          </a>
        ))}
      </div>
    </div>
  </div>

  <!-- Bottom section -->
  <div class="border-t border-[var(--border)]">
    <div class="max-w-6xl mx-auto px-5 py-5 flex flex-col md:flex-row items-center justify-between gap-3">
      <p class="text-xs font-body text-[var(--text)] opacity-40">
        © 2025 Валерия Ом
      </p>
      <div class="flex items-center gap-4">
        {socials.map((s) => (
          <a
            href={s.href}
            target="_blank"
            rel="noopener noreferrer"
            class="text-xs font-body text-[var(--text)] opacity-50 hover:opacity-100 hover:text-[var(--accent)] transition-all duration-300"
          >
            {s.label}
          </a>
        ))}
      </div>
    </div>
  </div>
</footer>
