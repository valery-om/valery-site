---
import BaseLayout from '../layouts/BaseLayout.astro';

const stats = [
  { value: '8+', label: 'лет в маркетинге' },
  { value: '50+', label: 'проектов' },
  { value: '1000+', label: 'дней на AI' },
];

const aboutStats = [
  { value: '8+', label: 'лет' },
  { value: '50+', label: 'проектов' },
  { value: 'AI', label: 'каждый день' },
  { value: 'SINTEZ', label: 'Agency' },
];

const services = [
  {
    num: '01',
    title: 'Консультация',
    desc: 'Ваша ситуация, ваш план, ваша страница с результатами.',
    href: '/consultation/',
  },
  {
    num: '02',
    title: 'SINTEZ Agency',
    desc: 'Агентство полного цикла. Стратегия и реализация.',
    href: 'https://sintez.agency',
    external: true,
  },
  {
    num: '03',
    title: 'Блог',
    desc: 'Заметки, эксперименты, разборы инструментов.',
    href: '/blog/',
  },
  {
    num: '04',
    title: '30 дней без команды',
    desc: 'Строю AI-систему маркетинга с нуля. Публично, с цифрами.',
    href: '/blog/',
    badge: 'скоро',
  },
];
---

<BaseLayout title="Валерия Ом — маркетинг × AI × эксперименты">
  <main class="flex-1 relative">

    <!-- Grain overlay -->
    <div class="grain"></div>

    <!-- ==================== HERO ==================== -->
    <section class="relative overflow-hidden">
      <div class="absolute bottom-0 left-1/2 -translate-x-1/2 w-[800px] h-[500px] rounded-full pointer-events-none" style="background: radial-gradient(ellipse at center, var(--accent) 0%, transparent 70%); opacity: 0.05;"></div>

      <div class="max-w-[1100px] mx-auto px-6 pt-20 pb-24 md:pt-32 md:pb-32">
        <div class="fade-in mb-8">
          <span class="inline-block font-mono text-[11px] text-[var(--accent)] border border-[var(--accent)] rounded-[20px] px-4 py-1 opacity-80">
            маркетинг &times; AI &times; эксперименты
          </span>
        </div>

        <h1 class="fade-in font-display text-4xl sm:text-5xl md:text-6xl lg:text-7xl leading-[1.08]">
          Валерия Ом
        </h1>

        <p class="fade-in font-display text-2xl sm:text-3xl md:text-[2.75rem] lg:text-5xl leading-[1.15] text-[var(--accent)] mt-3 md:mt-4">
          стратегический AI-маркетинг
        </p>

        <p class="fade-in mt-6 md:mt-8 text-base md:text-lg font-body text-[var(--text)] opacity-50 max-w-2xl leading-relaxed">
          Я занимаюсь маркетингом для бизнесов и экспертов с применением AI. Создаю новые решения, экспериментирую с подходами, ищу что реально работает. 8 лет в маркетинге, 3 года с AI каждый день. Co-founder SINTEZ Agency.
        </p>

        <div class="fade-in mt-8 md:mt-10 flex flex-wrap items-center gap-4">
          <a
            href="/consultation/"
            class="inline-flex items-center px-6 py-3 text-sm font-body font-medium rounded-[6px] bg-[var(--accent)] text-[#1A2E1A] hover:bg-[var(--accent-light)] transition-colors duration-300"
          >
            Консультация&ensp;&rarr;
          </a>
          <a
            href="/blog/"
            class="inline-flex items-center px-6 py-3 text-sm font-body font-medium rounded-[6px] border border-[var(--accent)] text-[var(--accent)] hover:bg-[var(--accent)] hover:text-[#1A2E1A] transition-all duration-300"
          >
            Блог
          </a>
        </div>

        <div class="fade-in mt-16 md:mt-20 flex flex-wrap gap-10 md:gap-16">
          {stats.map((s) => (
            <div>
              <span class="block font-display text-3xl md:text-4xl text-[var(--accent)]">
                {s.value}
              </span>
              <span class="block mt-1 text-[11px] font-body uppercase tracking-wider text-[var(--text)] opacity-35">
                {s.label}
              </span>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Divider -->
    <div class="section-divider"></div>

    <!-- ==================== НАПРАВЛЕНИЯ ==================== -->
    <section class="py-20 md:py-28">
      <div class="max-w-[1100px] mx-auto px-6">
        <h2 class="fade-in font-display text-3xl md:text-4xl lg:text-5xl mb-12 md:mb-16">
          Направления
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 md:gap-5">
          {services.map((card) => (
            <a
              href={card.href}
              target={card.external ? '_blank' : undefined}
              rel={card.external ? 'noopener noreferrer' : undefined}
              class="fade-in group relative block bg-[var(--surface)] border border-[var(--border)] rounded-xl p-6 md:p-8 overflow-hidden transition-all duration-300 hover:border-[var(--accent)] hover:shadow-[0_0_30px_rgba(200,164,78,0.08)]"
            >
              <span class="absolute top-4 right-6 font-display text-[4rem] leading-none text-[var(--text)] opacity-[0.05] select-none pointer-events-none">
                {card.num}
              </span>

              {card.badge && (
                <span class="absolute top-4 left-6 inline-block bg-[var(--accent)] text-[#1A2E1A] font-body font-medium text-[11px] px-2.5 py-0.5 rounded-md">
                  {card.badge}
                </span>
              )}

              <h3 class={`font-body font-bold text-lg md:text-xl mb-3 relative z-10 ${card.badge ? 'mt-6' : ''}`}>
                {card.title}
              </h3>
              <p class="font-body text-sm text-[var(--text)] opacity-45 leading-relaxed relative z-10 max-w-md">
                {card.desc}
              </p>

              <span class="inline-block mt-5 text-[var(--accent)] text-base opacity-40 group-hover:opacity-100 group-hover:translate-x-1 transition-all duration-300">
                &rarr;
              </span>
            </a>
          ))}
        </div>
      </div>
    </section>

    <!-- Divider -->
    <div class="section-divider"></div>

    <!-- ==================== КОНСУЛЬТАЦИЯ ==================== -->
    <section class="py-20 md:py-28">
      <div class="max-w-[1100px] mx-auto px-6">
        <h2 class="fade-in font-display text-3xl md:text-4xl lg:text-5xl mb-12 md:mb-16">
          Как устроена консультация
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-5 gap-12 md:gap-16">
          <div class="md:col-span-3 space-y-5">
            <p class="fade-in font-body text-base md:text-lg text-[var(--text)] opacity-60 leading-relaxed">
              Я рассматриваю продвижение с точки зрения целостности. Не &laquo;как вести инстаграм&raquo;, а как выстроить цифровую экосистему вокруг себя&nbsp;&mdash; чтобы повысить шансы быть найденным вашей аудиторией. Точек касания сейчас много, и все они между собой одновременно похожи и не похожи.
            </p>
            <p class="fade-in font-body text-base md:text-lg text-[var(--text)] opacity-60 leading-relaxed">
              После созвона вы получаете персональную страницу на сайте: запись с таймкодами, конспект, глоссарий, рекомендации под ваш конкретный запрос. Заходите и идёте по плану.
            </p>
          </div>

          <div class="md:col-span-2 flex flex-col items-start md:items-end justify-center gap-5">
            <div class="fade-in font-body text-lg md:text-xl text-[var(--text)] opacity-70">
              $100 &middot; онлайн &middot; 60 минут
            </div>
            <a
              href="/consultation/"
              class="fade-in inline-flex items-center px-6 py-3 text-sm font-body font-medium rounded-[6px] bg-[var(--accent)] text-[#1A2E1A] hover:bg-[var(--accent-light)] transition-colors duration-300"
            >
              Записаться&ensp;&rarr;
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Divider -->
    <div class="section-divider"></div>

    <!-- ==================== ОБО МНЕ ==================== -->
    <section class="py-20 md:py-28">
      <div class="max-w-[1100px] mx-auto px-6">
        <h2 class="fade-in font-display text-3xl md:text-4xl lg:text-5xl mb-12 md:mb-16">
          Обо мне
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-5 gap-12 md:gap-16">
          <div class="md:col-span-3 space-y-5">
            <p class="fade-in font-body text-base md:text-lg text-[var(--text)] opacity-60 leading-relaxed">
              Я Валерия. 8 лет делаю маркетинг. Последние три&nbsp;&mdash; плотно на AI, каждый день. Не потому что модно. Потому что это меняет всё.
            </p>
            <p class="fade-in font-body text-base md:text-lg text-[var(--text)] opacity-60 leading-relaxed">
              ИИшные тексты уже считываются как белый шум. Бесплатный GPT с запросом &laquo;сделай контент-план на месяц&raquo;&nbsp;&mdash; это не AI-маркетинг. AI работает только в руках, которые соображают что с ним делать.
            </p>
            <p class="fade-in font-body text-base md:text-lg text-[var(--text)] opacity-60 leading-relaxed">
              Я не веду чужие инстаграмы. Я строю стратегии и тестирую подходы. Рынок только формируется&nbsp;&mdash; и мне интересно в этом участвовать.
            </p>
          </div>

          <div class="md:col-span-2 flex flex-row md:flex-col flex-wrap gap-8 md:gap-10 md:pl-8 md:border-l md:border-[var(--border)]">
            {aboutStats.map((s) => (
              <div class="fade-in">
                <span class="block font-display text-4xl md:text-5xl text-[var(--accent)]">
                  {s.value}
                </span>
                <span class="block mt-1 text-sm font-body text-[var(--text)] opacity-35">
                  {s.label}
                </span>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- ==================== ФИНАЛЬНЫЙ CTA ==================== -->
    <section class="relative py-20 md:py-28 overflow-hidden">
      <div class="absolute inset-0 bg-[var(--surface)] pointer-events-none"></div>
      <div class="absolute bottom-0 left-1/2 -translate-x-1/2 w-[600px] h-[400px] rounded-full pointer-events-none" style="background: radial-gradient(ellipse at center, var(--accent) 0%, transparent 70%); opacity: 0.04;"></div>

      <div class="relative max-w-[1100px] mx-auto px-6 text-center">
        <h2 class="fade-in font-display text-3xl md:text-4xl lg:text-5xl mb-5">
          Начнём?
        </h2>
        <p class="fade-in font-body text-base md:text-lg text-[var(--text)] opacity-50 max-w-lg mx-auto leading-relaxed mb-8 md:mb-10">
          Подскажите с чем приходите&nbsp;&mdash; разберёмся за 60 минут.
        </p>
        <div class="fade-in">
          <a
            href="/consultation/"
            class="inline-flex items-center px-8 py-4 text-base font-body font-medium rounded-[6px] bg-[var(--accent)] text-[#1A2E1A] hover:bg-[var(--accent-light)] transition-colors duration-300"
          >
            Записаться на консультацию&ensp;&rarr;
          </a>
          <p class="mt-4 text-xs font-body text-[var(--text)] opacity-30">
            $100 &middot; онлайн &middot; 60 минут
          </p>
        </div>
      </div>
    </section>

  </main>
</BaseLayout>

<style>
  .grain {
    position: fixed;
    inset: 0;
    pointer-events: none;
    z-index: 50;
    opacity: 0.03;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)'/%3E%3C/svg%3E");
    background-repeat: repeat;
    background-size: 256px 256px;
  }

  .section-divider {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 24px;
  }
  .section-divider::after {
    content: '';
    display: block;
    height: 1px;
    background: var(--accent);
    opacity: 0.1;
  }

  .fade-in {
    opacity: 0;
    transform: translateY(24px);
    transition: opacity 0.7s ease-out, transform 0.7s ease-out;
  }
  .fade-in.visible {
    opacity: 1;
    transform: translateY(0);
  }
</style>

<script>
  function initFadeIn() {
    const els = document.querySelectorAll('.fade-in');
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add('visible');
            observer.unobserve(entry.target);
          }
        });
      },
      { threshold: 0.1, rootMargin: '0px 0px -40px 0px' }
    );
    els.forEach((el) => observer.observe(el));
  }

  initFadeIn();
  document.addEventListener('astro:after-swap', initFadeIn);
</script>
